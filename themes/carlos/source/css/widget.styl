//These are added by Yu-Hsuan Yen
//theme for widget: archive, category, recent-post.
.widget
  color: #bfbfbf
  background: transparent 
  
  a
    color: #bfbfbf
    text-decoration: none
    &:hover
      color: #3f51b5
      text-decoration: none
  ul, ol
    padding-left: 20px
    padding-top: 20px
    li
      padding-bottom:5px
    ul, ol
      margin-left: 0 0px
      ul
      list-style: disc
      ol
        list-style: decimal

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"
ul.archive-list,ul.tag-list
    padding-top:0
#avatar_pic
  max-height: 200px
  max-width: 200px
.sidebar-container h5
  padding-bottom:0!important